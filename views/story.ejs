
<% if(story != null) {%>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%- story.title %></li>
        </ol>
    </nav>   

    <div class="row">
        <h1>Shared Stories</h1>
        <div class="col-12 col-md-8">
            <img src="<%=story.file %> " class="img-fluid sticky-top" style="top:20px" alt="<%-story.title %>" loading="lazy">
        </div>

        <div class="col-12 col-md-4">
            <div class="row">
                <div class="col-12"><h1><%- story.title %></h1></div>
                <div class="col-12 mb-4"><h4><%- story.name %></h4></div>
                <div class="col-12" style="white-space: pre-line">
                    <h4>Description:</h4>
                    <h5><%- story.description %></h5>
                    <%- story.date %>
                </div>
                <h6>Like a story to save it.</h6>
                <i class="fa-solid fa-heart  <%= story.like === true ? 'like' : 'notlike'%>" data-id="<%=story._id %>"></i>
                <% /* %>
                    <button type="button" class="favorite-button <%= story.like === true ? 'like' : 'notlike'%>" id="heart" aria-label="favorite" data-id="<%=story._id %>">
                        <i class="fa-solid fa-heart"></i>
                    </button>
                </div>
                <% */ %>
        </div>
    </div>

<% }else{ %>
    <p>No item found.</p>
<% } %>